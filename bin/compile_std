#!/bin/bash

#GREEN="\033[0;32m"
#RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m'

start=$(date +"%s.%4N")

{
    rm ./out.asm
    rm ./out.o
    rm ./out
    rm ./std.o
    rm ./std.asm
} 2> /dev/null

# compile, link and assemble the program
export RUST_BACKTRACE=1
cargo run -- std/std.oxy \
             --keep \
             --exec_mode=1 \
             --out=std \
             --allow_overrides \
             --stop_after_asm \
             -O0

end=$(date +%s.%4N)
runtime=$(echo "$end - $start" | bc -l)
printf "Compiled STD in ${YELLOW}%s${NC} seconds \n\n" "$runtime"
