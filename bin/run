#!/bin/bash

RED='\033[0;31m'
NC='\033[0m'

{
    rm ./out.asm
    rm ./out.o
    rm ./out
} 2> /dev/null

# compile, link and assemble the program
export RUST_BACKTRACE=1
bin/compile_std
cargo run -- -ko=res-out --std std.asm "$@"

if test -f "./res-out"; then
    ./res-out
else
    printf "${RED}No output file!${NC}\n"
fi
