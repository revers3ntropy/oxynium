#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m'

{
    rm ./out.asm
    rm ./out.o
    rm ./out
} 2> /dev/null

# compile, link and assemble the program
export RUST_BACKTRACE=1
cargo run -- "$@"

if test -f "./out.asm"; then
  nasm -f elf64 out.asm

  if test -f "./out.o"; then
    ld -s -o out out.o
  fi
fi

if test -f "./out"; then
    ./out
else
    echo "No output file!"
fi
