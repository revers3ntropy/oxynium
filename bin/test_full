#!/bin/bash

YELLOW='\033[0;33m'
NC='\033[0m'

start=$(date +%s.%N)

function run_test() {
    name=$1

    rm "./test/spec-$name.log" 2> /dev/null
    cp test/"$name".Dockerfile Dockerfile
    printf "${YELLOW}  Building '$name'... ${NC}\n"
    sudo docker build -t oxy-spec-"$name" .
}

#run_test "macos"
run_test "ubuntu"
run_test "alpine"
run_test "centos"
run_test "debian"
#run_test "windows"

rm Dockerfile

sudo python3 ./test/test_full_concurrent.py

end=$(date +%s.%N)
runtime=$(echo "$end - $start" | bc -l)
printf "${YELLOW}  Runtime: %s seconds ${NC}\n" "$runtime"
