#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m'

{
    rm ./out.asm
    rm ./out.o
    rm ./out
} 2> /dev/null

errors=$({
  # compile, link and assemble the program
  export RUST_BACKTRACE=1
  bin/compile_std
  cargo run -- --std std.asm -o=exec-out -e "$@"
})

if [ "$errors" != "" ]; then
    printf "%s'\n\n" "$errors"
    return 1
fi
printf "${GREEN}Program output:${NC}\n"
./exec-out
